actor MetaSectorNukage
{
	-SOLID
	+CANTLEAVEFLOORPIC
	+DONTSPLASH
	+NOTELEPORT
	+VULNERABLE
	+DONTTHRUST
	MaxStepHeight 0
	speed 8
	radius 1
	height 1
	states
	{
		Spawn:
			TNT1 A 0
			TNT1 A 8 
			TNT1 A 0 A_RadiusGive("FancyWorldReducer", 32, RGF_OBJECTS,1,None,"MetaSectorNukage")
		Idle:
			TNT1 A 8 A_Wander
			TNT1 A 0 A_JumpIfInventory("FancyWorldReducer", 1, "Remove")
			TNT1 A 0 A_Jump(128,"Croak")
			loop
		Croak:
			NUBL ABCDE 4
			goto Idle
		Remove:
			TNT1 A 0
			stop
	}
}

